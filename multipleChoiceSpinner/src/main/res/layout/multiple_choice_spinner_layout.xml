<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/textview_margin_end"
        android:layout_toLeftOf="@+id/cbCheck"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/text_padding_horizontal"
        android:singleLine="true"
        android:textSize="14sp"
        tools:text="Text" />

    <CheckBox
        android:id="@+id/cbCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/cb_margin_vertical"
        android:layout_marginBottom="@dimen/cb_margin_vertical"
        android:visibility="visible" />

</RelativeLayout>
